<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Amasty\RequestQuote\Block\Account\Quote\Link"
                   name="customer-account-navigation-quote-subscriptions-link"
                   ifconfig="amasty_request_quote/general/is_active">
				<arguments>
                    <argument name="path" xsi:type="string">amasty_quote/account/index</argument>
                    <argument name="label" xsi:type="string" translate="true">My Saved Carts</argument>
                    <argument name="sortOrder" xsi:type="number">230</argument>
                </arguments>
            </block>	   
        </referenceBlock>
    </body>
</page>
