<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Customer Login</title>
    </head>
    <body>
        <referenceContainer name="content">
            <referenceBlock name="customer_form_login">
                <action method="setTemplate">
                    <argument name="template" xsi:type="string">Hyva_BssSocialLogin::form/login.phtml</argument>
                </action>
            </referenceBlock>
        </referenceContainer>
        <referenceContainer name="content">
            <referenceBlock name="customer.new">
                <action method="setTemplate">
                    <argument name="template" xsi:type="string">Hyva_BssSocialLogin::form/newcustomer.phtml</argument>
                </action>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
