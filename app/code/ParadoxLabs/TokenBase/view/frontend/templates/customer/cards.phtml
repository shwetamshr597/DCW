<?php
/** @var \ParadoxLabs\TokenBase\Block\Customer\Cards $block */
// @codingStandardsIgnoreFile
?>
<div class="block block-cards-list">
    <div class="block-title">
        <h2><?= $block->escapeHtml($block->getPaymentMethodTitle()); ?></h2>
    </div>
    <div class="block-content items checkout-payment-method">
        <?php $cards = $block->getCards(); ?>
        <?php if (!empty($cards)): ?>
            <?php /** @var \ParadoxLabs\TokenBase\Model\Card $card */ ?>
            <?php foreach ($cards as $card): ?>
                <?php $card = $card->getTypeInstance(); ?>
                <fieldset class="box-address-billing payment-method-title fieldset<?php if ($card->getExpires() != '' && strtotime((string)$card->getExpires()) < time()): ?> expired<?php endif; ?>">
                    <legend class="box-title legend">
                        <?php if (!empty($card->getType())): ?>
                            <img class="credit-card-type payment-icon" src="<?= $block->getViewFileUrl('Magento_Payment::images/cc/' . strtolower((string)$card->getType()) . '.png'); ?>" alt="<?= $block->escapeHtmlAttr($block->getCcTypeLabel($card)); ?>" />
                        <?php endif; ?>
                        <strong class="payment-icon">
                            <span>
                                <?= $block->escapeHtml($card->getLabel(empty($card->getType()))); ?>
                            </span>
                        </strong>
                        <?php if (strtotime((string)$card->getExpires()) > time()): ?>
                            <small><?= $block->escapeHtml(__('(Expires %1)', date('m/Y', (int)strtotime((string)$card->getExpires())))); ?></small>
                        <?php endif; ?>
                    </legend>
                    <div class="box-content">
                        <address>
                            <?= $block->getFormattedCardAddress($card->getAddressObject()); ?>
                        </address>
                        <div class="item actions box-actions">
                            <?php if ($card->isInUse()): ?>
                                <abbr title="<?= $block->escapeHtmlAttr(__('This payment record cannot be modified while associated with pending orders.')); ?>"><?= $block->escapeHtml(__('Card In Use')); ?></abbr>
                            <?php else: ?>
                                <a class="action edit" href="<?= $block->escapeUrl($block->getUrl('*/*', ['_secure' => true, 'form_key' => $block->getFormKey(), 'method' => $card->getMethod(), 'id' => $card->getHash()])) ?>"><span><?= $block->escapeHtml(__('Edit')) ?></span></a>
                                <a class="action delete" href="<?= $block->escapeUrl($block->getUrl('*/*/delete', ['_secure' => true, 'form_key' => $block->getFormKey(), 'method' => $card->getMethod(), 'id' => $card->getHash()])) ?>"><span><?= $block->escapeHtml(__('Delete')) ?></span></a>
                            <?php endif; ?>
                        </div>
                    </div>
                </fieldset>
            <?php endforeach; ?>
        <?php else: ?>
            <p><?= $block->escapeHtml(__('You do not have any payment data saved yet.')) ?></p>
        <?php endif; ?>
    </div>
</div>
